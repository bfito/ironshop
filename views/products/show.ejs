<!DOCTYPE html>
<html>
  <head>
    <title>Products</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Product Details</h1>

    <h2> <%= product.name %> </h2>

    <p>$ <%= product.price %> </p>

    <img src="<%= product.imageUrl %>">

    <p><%= product.description %></p>

    <a href="/products/<%= product._id %>/reviews/new"> Review this Product </a>

    <a href="/products/<%= product._id %>/edit"> Edit Product </a>

    <form action="/products/<%= product._id%>/delete" method="POST">
        <button type="submit">Delete Product</button>
    </form>

    <h2> Customer Reviews </h2>

    <ul>
      <% product.reviews.forEach((oneReview) => { %>
        <li>
          <p><%= oneReview.content %></p>
          <p><%= oneReview.stars %></p>
          <strong><%= oneReview.author %></strong>
        </li>
      <%  }); %>
    </ul>
    <a href="/products"> Go Back to Products </a>

  </body>
</html>
