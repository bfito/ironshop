<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>New Review</title>
  </head>
  <body>
    <h1>Review <%= product.name %></h1>

    <% if (errorMessage) { %>
      <p class="error"> <%= errorMessage %> </p>
    <% } %>

    <% if (typeof errors !== 'undefined') { %>
      <% for (let errorField in errors) { %>
        <div> <%= errors[errorField].message %> </div>
      <% } %>
    <% } %>

    <form action="/products/<%= product._id %>/reviews" method="POST">
      <label for="author">Email Address</label>
      <input type="text" name="author" id="author">

      <label for="author">Stars</label>
      <input type="number" name="stars" id="stars">

      <label for="content">Content</label>
      <textarea name="content" rows="3" cols="80"></textarea>

      <button type="submit">Submit Review</button>
    </form>

  </body>
</html>
